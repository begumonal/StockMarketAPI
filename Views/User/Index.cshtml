@{
    ViewData["Title"] = "Users";
}
@model ICollection<StockMarket_begum.Models.CustomUser>

<div class="text-center">
    <h1 class="display-4">Users</h1>
    @if (@Model != null && @Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Email</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div class="text-center">
    <a class="nav-link text-dark" asp-area="Identity" asp-controller="Home" asp-action="Index">Add User</a>
    <a class="nav-link text-dark" asp-area="Identity" asp-controller="Admin" asp-action="Index">Add Admin</a>
</div>
